<div class="term_group round">
   <span class="term_group_name">
      <%= term_group.name %> 
   </span>
   <% unless term_group.name_translated.nil? %>
      &nbsp;==&nbsp;
      <span class="term_group_name_translated">
        <%= term_group.name_translated %> 
      </span>
   <% end %>

   <% unless term_group.terms.nil? %>
      <%= render :partial => "terms/show.html.erb", :collection => term_group.terms, :as => :term %>
   <% end %>
</div>
<br />
