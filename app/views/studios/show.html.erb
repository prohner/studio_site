<table class="profile" summary="Profile information">
  <tr>
    <td class="sidebar round">
      <strong>Name</strong> <%= @studio.name %><br />
      <strong>URL</strong>  <%= link_to studio_path(@studio.name), @studio %>

      <% if not @studio.styles.nil? %>
         <table class="styles" summary="Studio styles">
            <tr><th>Styles</th></tr>
              <%= render @studio.styles %>
            <tr>
               <td>
                  <%= render 'shared/style_form' %>
               </td>
            </tr>
         </table>
      <% end %>
    </td>
    <td class="main" style="vertical-align:top;">
      <h1>
         <%= gravatar_for @studio, :size => 30 %>
         <%= @studio.name %>
       </h1>
       <% unless @current_style.nil? %>
          <span class="current_style">
          <%= @current_style.name %>
          </span>
          <br />
          
          <% @term_groups.each do |term_group| %>
             <div class="term_group">
                <span class="term_group_name">
                  <%= term_group.name %> 
                </span>
                <% unless term_group.name_translated.nil? %>
                   &nbsp;==&nbsp;
                   <span class="term_group_name_translated">
                     <%= term_group.name_translated %> 
                   </span>
                <% end %>
             
                <% unless term_group.terms.nil? %>
                   <dl class="terms">
                   <% term_group.terms.each do |term| %>
                      <dt class="term_term">
                         <%= term.term %> 
                      </dt>
                      <dd class="term_term_translated">
                         <%= term.term_translated %> 
                         <% unless term.description.nil? %>
                           <br />
                            <span class="term_term_description">
                               <%= term.description %> 
                            </span>
                         <% end %>
                      </dd>
                      <dd>
                         <%= link_to "delete", 
                                 term, 
                                 :method => :delete, 
                                 :confirm => "Are you sure you want to delete #{term.term}?",
                                 :title => "Delete #{term.term}" %>
                      </dd>
                      <br />
                   <% end %>
                   </dl>
                <% end %>
             </div>
             <br />
          <% end %>
       <% end %>
       
       <hr size="1">
       <%= render 'shared/term_group_form' %>
       <hr size="1">
       <%= render 'shared/term_form' %>
       <% if Rails.env.development? %>
          <hr size="1">
          <style type="text/css" media="screen">
            dl.event
            {
            	margin: 2em 0;
            	padding: 0;
            	font-family: georgia, times, serif;
            }

            .event dt
            {
            	position: relative;
            	left: 0;
            	top: 1.1em;
            	width: 5em;
            	font-weight: bold;
            }

            .event dd
            {
            	border-left: 1px solid #000;
            	margin: 0 0 0 6em;
            	padding: 0 0 .5em .5em;
            }
          </style>
          Calendar Item Example
          <dl class="event">
          	<dt>23 March</dt>
          	<dd>Car club meeting</dd>
          	<dd>7pm</dd>
          	<dd>See a wide range of classic cars on display... </dd>
          	<dt>13 June</dt>
          	<dd>Cake stall</dd>
          	<dd>12pm</dd>
          	<dd>Cakes of every type. All proceeds go to the... </dd>
          </dl>
      <% end %>
    </td>
  </tr>
</table>
